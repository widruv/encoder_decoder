{
	"manifest_version": 2,
	"name": "Encoder_Decoder",
	"version": "1.0.0",
	"description": "url, base64, html, hex encoding/decoding",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "activeTab", "http://*/*", "https://*/*"
    ],
	"content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    }
}
